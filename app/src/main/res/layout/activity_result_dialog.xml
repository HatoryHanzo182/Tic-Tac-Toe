<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
                android:layout_width="match_parent" tools:context=".ResultDialog">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/lavender"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/message_text"
                  android:gravity="center" android:text="Results" android:textColor="@color/white" android:layout_marginTop="20dp"
                  android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:textSize="18sp" android:textStyle="bold"/>

        <Button android:layout_width="match_parent" android:layout_height="60dp" android:id="@+id/start_again_button" android:textSize="18sp"
                android:textStyle="bold" android:backgroundTint="@color/white" android:text="Restart" android:layout_margin="20dp"
                android:textColor="@color/black" app:cornerRadius="20dp"/>
    </LinearLayout>

</RelativeLayout>